@using ViewExample.Models

@{
    string appTitle = "Asp.NET Core Demo App";
    Person person = new()
    {
        Name = "John",
        DateOfBirth = Convert.ToDateTime("2000-07-01"),
        // DateOfBirth = null,
        Gender = PersonGender.Male,
    };
}
<!DOCTYPE html>
<html>
    <head>
        <title>@appTitle</title>
        <meta charset="utf-8" />
    </head>

    <body>
        <h1>Welcome</h1>
        <h2>Hello, @person.Name</h2>
        @if (person.DateOfBirth.HasValue)
        {   
            double age = Math.Round((DateTime.Now - person.DateOfBirth).Value.TotalDays / 365.25);
            <h3>@age years old</h3>
        } 
        else
        {
            <h3>Date of birth is unknown</h3>
        }

        @switch (person.Gender)
        {
            case PersonGender.Male: 
                <p>My gender is male</p>; 
                break;
                
            case PersonGender.Female: 
                <p>My gender is female</p>; 
                break;

            default: 
                <p>My gender is unknown</p>;
                break;
        }
    </body>
</html>