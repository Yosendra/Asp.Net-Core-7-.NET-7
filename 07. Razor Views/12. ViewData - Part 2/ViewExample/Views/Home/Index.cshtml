@using ViewExample.Models

<!DOCTYPE html>
<html>
    <head>
    <title>@ViewData["appTitle"]</title>    @* ViewData is accessible in View *@
        <meta charset="utf-8" />
        @* Notice the url. CSS file is considered as static file. That's way we put it in 'wwwroot' directory *@
        @* '~' refers to 'localhost:port_number' *@
        <link href="~/StyleSheet.css" rel="stylesheet" />
    </head>

    <body>
        <div class="page-content">
            <h1>Welcome</h1>
            @{
                List<Person> people = (List<Person>?)ViewData["people"] ?? new();
            }

            @foreach (var person in people)
            {
                <div class="box float-left w-50">
                    <h3>@person.Name</h3>
                    <table class="table w-100">
                        <tbody>
                            <tr>
                                <td>Gender</td>
                                <td>@person.Gender</td>
                            </tr>
                            <tr>
                                <td>Date of Birth</td>
                                <td>@person.DateOfBirth.Value.ToString("MM/dd/yyyy")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </body>
</html>