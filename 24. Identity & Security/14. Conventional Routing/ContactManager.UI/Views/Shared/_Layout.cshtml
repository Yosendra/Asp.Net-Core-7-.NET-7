<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <div class="flex" id="top-bar-div">
                    <div class="flex-1" id="app-title-div">
                        <h1 class="app-title"><i class="fa-solid fa-people-simple"></i>Contact Manager</h1>
                    </div>
                    <div class="flex-1 pr" id="search-box-div">
                        <div class="navbar account-links">
                            <ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><i class="fa-solid fa-user mr"></i>@User.Identity.Name</li>
                                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                                } 
                                else
                                {
                                    bool isRegisterPageActive = ViewBag.CurrentUrl == "~/Account/Register";
                                    bool isLoginPageActive = ViewBag.CurrentUrl == "~/Account/Login";

                                    <li><a asp-controller="Account" asp-action="Register" class=@(isRegisterPageActive ? "nav-active" : "")>Register</a></li>
                                    <li><a asp-controller="Account" asp-action="Login" class=@(isLoginPageActive ? "nav-active" : "")>Login</a></li>
                                }                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="navbar mb">
                <ul>
                    @{
                        bool isIndexPageActive = ViewBag.CurrentUrl == "~/Person/Index";
                        bool isUploadCountryPageActive = ViewBag.CurrentUrl == "~/Country/UploadFromExcel";
                    }
                    <li><a asp-controller="Person" asp-action="Index" class=@(isIndexPageActive ? "nav-active" : "")>Person</a></li>
                    <li><a asp-controller="Country" asp-action="UploadFromExcel" class=@(isUploadCountryPageActive ? "nav-active" : "")>Upload Country</a></li>
                </ul>
            </div>

            <div class="body">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("script", required: false)
</body>
</html>
